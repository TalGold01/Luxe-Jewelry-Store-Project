# Backend API Configuration
# This variable configures the base URL for the FastAPI backend service
# that handles product data and cart operations.

# Development (default)
REACT_APP_API_BASE_URL=http://localhost:8000/api

# Authentication Service Configuration
# This variable configures the base URL for the authentication microservice
# that handles user registration, login, and profile management.

# Development (default)
REACT_APP_AUTH_BASE_URL=http://localhost:8001

# For other environments, uncomment and modify as needed:
# Staging
# REACT_APP_API_BASE_URL=https://your-staging-api.herokuapp.com/api
# REACT_APP_AUTH_BASE_URL=https://your-staging-auth.herokuapp.com

# Production
# REACT_APP_API_BASE_URL=https://your-production-api.herokuapp.com/api
# REACT_APP_AUTH_BASE_URL=https://your-production-auth.herokuapp.com

# Optional: Backend Host and Port (for documentation)
REACT_APP_BACKEND_HOST=localhost
REACT_APP_BACKEND_PORT=8000
